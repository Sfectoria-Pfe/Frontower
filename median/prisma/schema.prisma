model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  address   String

}




model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  price       Float
  imageUrl    String?
  category    String

  stock       Int
 
}
